<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.i22works.abdool.muaz.surveycigga.VisitingInformation">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Information"
        android:id="@+id/title_contact"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"


        />

    <EditText
        android:id="@+id/edt_contact_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_below="@+id/title_contact"
        android:hint="Name of contact dealt with"
        android:layout_marginTop="92dp" />

    <EditText
        android:id="@+id/edt_designation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edt_contact_info"
        android:hint="Designation of contact"
        android:layout_marginTop="189dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Complete"
        android:text="Complete"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"

        />
</RelativeLayout>
